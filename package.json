{
  "name": "memory-server",
  "version": "1.0.0",
  "description": "A developer memory server hosted on Cloudflare with MCP support",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "wrangler deploy --dry-run",
    "db:migrate": "wrangler d1 migrations apply memory-db",
    "db:create-migration": "wrangler d1 migrations create memory-db",
    "ui:dev": "cd ui && npm run dev",
    "ui:build": "cd ui && npm run build",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "cf-typegen": "wrangler types"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.0",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "fetch-to-node": "^2.1.0",
    "hono": "^4.10.3",
    "uuid": "^9.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240208.0",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.34.0"
  },
  "keywords": [
    "cloudflare-workers",
    "memory",
    "mcp",
    "development"
  ],
  "author": "",
  "license": "MIT"
}